# Example .env file for Modular Telegram Bot
# Copy this file to .env and fill in your real values

# Telegram bot token (get from BotFather)
BOT_TOKEN=your-telegram-bot-token-here

# Group chat ID for notifications or group operations (e.g., -1001234567890)
MAIN_GROUP_CHAT_ID=your-group-chat-id
GROUP_CHAT_ID=your-group-chat-id

# Channel ID to check for user membership (e.g., -1009876543210)
CHANNEL_ID_TO_CHECK=your-channel-id

# Primary Admin user ID
PRIMARY_ADMIN_ID=your-primary-admin-id

# Admin user IDs, comma-separated (e.g., 123456789,987654321)
ADMIN_IDS=your-admin-ids

# User IDs allowed to have up to 8 active orders (comma-separated, optional)
ORDER_LIMIT_EXCEPTION_USER_IDS=user-id(s)

# (Optional) Base directory for data files
DATA_DIR=data

# --- Late Delivery Notification ---
# Interval (in minutes) for checking late deliveries.
LATE_DELIVERY_CHECK_INTERVAL_MINUTES = 30